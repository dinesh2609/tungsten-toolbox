#########################
## Documentation
#########################
README                                 Quick start guide
REFERENCE                              This file
MANIFEST                               List of files in the cookbook
check_cookbook.sh                      Verifies that the cookbook directory contains all files

#########################
## Cluster configuration
#########################
COMMON_NODES.sh                        List of nodes in the cluster
USER_VALUES.sh                         Cluster configuration
BOOTSTRAP.sh                           System definition builder (For internal use)
utilities.sh                           Cluster shared routines
NODES_MASTER_SLAVE.sh                  Nodes definition for a master-slave topology
NODES_ALL_MASTERS.sh                   Nodes definition for an all-masters topology
NODES_STAR.sh                          Nodes definition for a star topology
NODES_FAN_IN.sh                        Nodes definition for a fan-in topology

#########################
## pre-installation tools
#########################
pre_req_checker/tungsten_prereq        Checks and installs pre-requisites
deploy_to_sandboxes.sh                 Create database sandboxes in all servers for further installation
validate_cluster.sh                    Validates the cluster with all the installation pre-checks

#########################
## Installation tools
#########################
install_master_slave.sh                Installs a master-slave topology
install_all_masters.sh                 Installs an all-masters topology
install_fan_in.sh                      Installs a fan-in topology
install_star.sh                        Installs a star topology
install_master_slave_direct.sh         Installs a master-slave topology with 'direct mode'
install_standard_replication.sh        Installs standard MySQL replication

#########################
## Administrative tools
#########################
take-over.sh                           Takes over a master-slave cluster from MySQL replication
add_node_master_slave.sh               Add a node to a master-slave topology
add_node_star.sh                       Add a node to a star topology
switch.sh                              Switches role between the master and one given slave
collect_logs.sh                        Gets all the logs from all servers
load_data.sh                           Starts concurrent transaction load in all masters

#########################
## Cleanup tools
#########################
clear_all.sh                           Clears the cluster inconditionally
clear_cluster.sh                       Clears the cluster (internal user)
clear_cluster_all_masters.sh           Clears an all-masters topology
clear_cluster_fan_in.sh                Clears a fan-in topology
clear_cluster_master_slave.sh          Clears a master-slave topology
clear_cluster_master_slave_direct.sh   Clears a master-slave (direct) topology
clear_cluster_star.sh                  Clears a star topology

#########################
## Monitoring tools
#########################
simple_services                        Filter the output of 'trepctl services'
show_cluster.sh                        Shows the services across all hosts (internal use)
show_all_masters.sh                    Shows the services across all hosts (all-masters topology)
show_fan_in.sh                         Shows the services across all hosts (fan-in topology)
show_master_slave.sh                   Shows the services across all hosts (master-slave topology)
show_star.sh                           Shows the services across all hosts (star topology)


#########################
## Shortcuts
#########################
replicator.sh                          Shortcut to the 'replicator' command
trepctl.sh                             Shortcut to the 'trepctl' command
thl.sh                                 Shortcut to the 'thl' command
tool.sh                                Internal shortcut engine (not to use directly)

conf.sh                                Shows the configuration files using 'less'
show_conf.sh                           Same as 'conf.sh'
edit_conf.sh                           Edits the configuration files using 'vim'
vimconf.sh                             Same as 'vimconf.sh'
emacsconf.sh                           Edits the configuration files using 'emacs'
log.sh                                 Shows the replicator log using 'less'
show_log.sh                            Same as 'log.sh'
vilog.sh                               Edits the replicator log using 'vi'
vimlog.sh                              Edits the replicator log using 'vim'
emacslog.sh                            Edits the replicator log using 'emacs'

heartbeat.sh                           Performs a heartbeat in each master
paths.sh                               Shows the path to all important tools and services
services.sh                            Performs 'trepctl services'

#########################
## Testing tools
#########################
test_all_topologies.sh                 Installs and tests all topologies
test_cluster.sh                        Tests a cluster (internal user)
test_all_masters.sh                    Tests an all-masters topology 
test_fan_in.sh                         Tests a fan-in topology
test_master_slave.sh                   Tests a master-slave topology
test_star.sh                           Tests a star topology


#########################
## ENVIRONMENT VARIABLES
#########################
VERBOSE=1                              Gives more information during installation
VERBOSE=2                              Enables debug mode during validation
DRYRUN=1                               Used by all installation scripts. Shows installation commands
MORE_OPTIONS="..."                     Used by all installation scripts. Adds more options to the installer command
